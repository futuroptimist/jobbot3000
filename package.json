{
  "name": "jobbot3000",
  "version": "0.1.0",
  "license": "MIT",
  "type": "module",
  "main": "./src/index.js",
  "exports": {
    ".": "./src/index.js"
  },
  "bin": {
    "jobbot": "bin/jobbot.js"
  },
  "scripts": {
    "start": "node scripts/web-server.js --env development",
    "dev": "node scripts/web-server.js --env development",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format:check": "prettier --check \"**/*.{js,mjs,cjs,ts,tsx,jsx,json,md,mdx,yml,yaml}\"",
    "format:fix": "prettier --write \"**/*.{js,mjs,cjs,ts,tsx,jsx,json,md,mdx,yml,yaml}\"",
    "test": "vitest",
    "test:ci": "npm run prepare:test && vitest run && playwright test",
    "prepare:test": "npx playwright install --with-deps",
    "summarize": "node scripts/summarize.js",
    "chore:prompts": "node scripts/chore-prompts.js",
    "chore:reminders": "node scripts/chore-reminders.js",
    "web:server": "node scripts/web-server.js",
    "web:screenshots": "node scripts/generate-web-screenshots.js",
    "typecheck": "tsc -p tsconfig.json",
    "prepare": "npx simple-git-hooks",
    "postinstall": "node scripts/install-console-font.js"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "better-sqlite3": "^12.4.1",
    "docx": "^9.5.1",
    "dotenv": "^16.6.1",
    "drizzle-orm": "^0.44.6",
    "express": "^4.21.2",
    "html-to-text": "9.0.5",
    "jszip": "^3.10.1",
    "node-fetch": "^3.3.2",
    "pdf-parse": "^1.1.1",
    "remove-markdown": "^0.6.2",
    "ws": "^8.18.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@playwright/test": "^1.48.2",
    "axe-core": "^4.10.0",
    "cspell": "^8.15.4",
    "eslint": "^9.36.0",
    "globals": "^16.4.0",
    "jsdom": "^25.0.1",
    "lighthouse": "^11.7.1",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "puppeteer": "^23.9.0",
    "simple-git-hooks": "^2.11.0",
    "typescript": "^5.6.3",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{js,mjs,cjs,ts,tsx,jsx}": "eslint --max-warnings=0",
    "*.{ts,tsx}": "prettier --check",
    "*.{json,md,mdx,yml,yaml}": "prettier --check"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged && npm run typecheck"
  }
}
