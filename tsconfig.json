{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "types": ["node"],
    "typeRoots": ["./types", "./node_modules/@types"],
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/web/schemas.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
